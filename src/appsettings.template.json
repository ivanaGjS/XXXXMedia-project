{
  "ConnectionStrings": {
    "CampaignDb": "Server=tcp:{your_sql_server}.database.windows.net,1433;Initial Catalog=CampaignDb;Persist Security Info=False;User ID={db_user};Password={db_password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "AzureServiceBus": {
    "ConnectionString": "Endpoint=sb://{your_servicebus}.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey={key}"
  },
  "AzureBlob": {
    "StorageConnectionString": "DefaultEndpointsProtocol=https;AccountName={account};AccountKey={key};EndpointSuffix=core.windows.net",
    "BlobContainer": "campaigns"
  },
  "EmailSettings": {
    "Provider": "SendGrid",
    "ApiKey": "{sendgrid_api_key}",
    "FromAddress": "no-reply@yourdomain.com"
  },
  "KeyVault": {
    "Name": "{your-keyvault-name}"
  }
}
